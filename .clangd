
CompileFlags:
  Add: [-std=c++20, -Wall, -Wextra, -Wpedantic, -Iinc, -Isrc]
  Remove: [-std=gnu++20, -std=gnu++2a, -std=c++2a]

Diagnostics:
  ClangTidy: {}
  UnusedIncludes: Strict
  MissingIncludes: Strict

InlayHints:
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes

---
If:
  PathMatch: .*/(third_party|third-party|external|extern|vendor|build|dist|out)/.*
Diagnostics:
  ClangTidy:
    Remove: ["*"]
  UnusedIncludes: None
